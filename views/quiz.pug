extends layout

block content
  h1= title

  if show
    form(method='post')
      p Question ... ?
      ul 
        each item in data
          li 
            span=item.title
            input(type='radio' name='quiz' value=item._id)

        input(type='submit'  value='vote')    
        p Vote and look at the results
  else 
      h1 Survey Done    
      p Answers: 
      ul 
        each item in data 
          li #{item.title} votes: #{item.vote} ( #{Math.round(item.vote/sum * 100)}% )

      p All Votes: #{sum}